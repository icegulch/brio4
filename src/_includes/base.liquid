          <path id="plus" d="M177.7 82.3H131V35.5H82.3v46.8H35.5V131h46.8v46.7H131V131h46.7z"/>
        </svg>
      </a>
      <nav class="header-nav">
        {% assign currentUrl =  page.url %}
        {% assign allPages = 'Products,Where to Buy,Contact' | split: ',' %}
        {% for item in allPages %}
          {% assign leSlug = item | slugify | prepend: '/' | append: '/' %}
          <a href="{{ leSlug }}" {% if currentUrl == leSlug %}aria-current="page" {% endif %}class="menu-item{% if currentUrl == leSlug %} active{% endif %}">
            {{ item }}
          </a>
        {%- endfor %}
      </nav>
    </header>

    <main class="site-main">
      {% include "page-header.liquid" %}
      {{ content }}
    </main>

    <footer class="site-footer" role="contentinfo">
      This site does not track you. Come and go as you please. Happy Trails!<br>
      <small>Last updated: {{ site.last_updated }}</small>
    </footer>
  </body>
</html>