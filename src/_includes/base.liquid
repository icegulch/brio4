<!DOCTYPE html>
<html lang="en">
  <head>
    {% if env == 'production' %}
      <link
        rel="preload"
        href="/fonts/work-sans-v18-latin-900.woff2"
        as="font"
        type="font/woff"
        crossorigin />
      <link
        rel="preload"
        href="/fonts/work-sans-v18-latin-900.woff"
        as="font"
        type="font/woff2"
        crossorigin />
    {% endif %}
    <meta charset="UTF-8">
    <title>
      {% if page.fileSlug == 'homepage' %}
        {{ site.title }} | {{ title }}
      {% elsif title %}
        {{ title }} | {{ site.title }}
      {% else %}
        {{ site.title }}
      {% endif %}
    </title>
    <meta name="generator" content="{{ eleventy.generator }}">
    <meta name="description" content="{{ site.description }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% include "og.liquid" %}
    {% include "site_icons.liquid" %}
    {% capture css %}{% include "css/new.css" %}{% endcapture %}
    <style>
      {% if site.env == "production" %}
        {{ css | cssmin }}
      {% else %}
        {{ css }}
      {% endif %}
    </style>
  </head>
  <body>

    {% include "svg-sprite.liquid" %}

    <header class="site-header" role="banner">
      <a href="/" class="brand">
