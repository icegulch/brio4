<h3 style="margin: 2rem 0 0;">Find Products Online</h3>
<div style="margin:0;display:grid;grid-template-columns:repeat( auto-fit, minmax(250px, 1fr) );gap:15px 30px;">

  {% for retailer in collections.retailers %}
    {% if retailer.data.location_types contains "online" %}
      <dl style="margin-bottom:0">
        <dt style="color:red">{{ retailer.data.name }}</dt>
        <dd style="margin:0;">
          <ul style="list-style: outside disc;margin:0;padding-left:1rem;font-size:0.95rem;">
            {% for product in retailer.data.online_products %}
            <li><a href="{{ product.url }}">{{ product.title }}</a></li>
            {% endfor %}
          </ul>
        </dd>
      </dl>
    {% endif %}
  {% endfor %}

</div>

<h3 style="margin: 2rem 0 0;">Find Products in Stores</h3>

<dl>
  {% assign nhRetailers = collections.physicalRetailStores | where: "state", "NH" %}
  <dt style="margin-bottom:0.5rem;color:red">{{ "NH" | stateNames }}</dt>
  <dd style="margin:0;display:grid;grid-template-columns:repeat( auto-fit, minmax(300px, 1fr) );gap:15px 50px;">
    {% assign cityGroup = nhRetailers | group_by: "city" | sort: "name" %}
    {% for city in cityGroup %}
      <dl>
        <dt style="text-transform:uppercase;font-size:0.85rem;font-weight:bold">{{ city.name }}</dt>
        <dd style="margin:0;">
          {% for location in city.items %}
            <address style="margin-top:0.5rem;font-style:normal">
              {{ location.name }}<br>
              {{ location.street1 }}{% unless location.street2 == blank %}{{ location.street2 | prepend: ", " }}{% endunless %}<br>
              {{ location.city }}, {{ location.state }} {{ location.postal_code }}<br>
              {% if location.phone %}<div>{{ location.phone }}</div>{% endif %}
              {% if location.store_url %}<div>{{ location.store_url }}</div>{% endif %}
              {% if location.email %}<div>{{ location.email }}</div>{% endif %}
            </address>
            {% for productTitle in location.products %}
              <a href="/products/{{ productTitle | slugify }}/">{{ productTitle }}</a>{% unless forloop.last %}, {% endunless %}
            {% endfor %}
          {% endfor %}
        </dd>
      </dl>
    {% endfor %}
  </dd>
</dl>

<div style="margin:0;display:grid;grid-template-columns:repeat( auto-fit, minmax(300px, 1fr) );gap:15px 50px;">
  {% assign otherRetailers = collections.physicalRetailStores | excludeByField: "state", "NH" %}
  {% assign customSortOrder = "MA ME NY CO" | split: " " %}
  {% for state in customSortOrder %}
    <dl>
      {% assign currentState = otherRetailers | where: "state", state %}
      <dt style="margin-bottom:0.5rem;color:red">{{ currentState[0].state | stateNames }}</dt>
      <dd style="margin:0;">
        {% assign cityGroup = currentState | group_by: "city" | sort: "name" %}
        {% for city in cityGroup %}
          <dl>
            <dt style="text-transform:uppercase;font-size:0.85rem;font-weight:bold">{{ city.name }}</dt>
            <dd style="margin:0;">
              {% for location in city.items %}
              <address style="margin-top:0.5rem;font-style:normal">
                {{ location.name }}<br>
                {{ location.street1 }}{% unless location.street2 == blank %}{{ location.street2 | prepend: ", " }}{% endunless %}<br>
                {{ location.city }}, {{ location.state }} {{ location.postal_code }}<br>
                {% if location.phone %}<div>{{ location.phone }}</div>{% endif %}
                {% if location.store_url %}<div>{{ location.store_url }}</div>{% endif %}
                {% if location.email %}<div>{{ location.email }}</div>{% endif %}
                {% for productTitle in location.products %}
                  <a href="/products/{{ productTitle | slugify }}/">{{ productTitle }}</a>{% unless forloop.last %}, {% endunless %}
                {% endfor %}
              </address>
              {% endfor %}
            </dd>
          </dl>
        {% endfor %}
      </dd>
    </dl>
  {% endfor %}
</div>
